<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Project1.UI.Controls"
                    >




    <Style TargetType="{x:Type controls:Project1UIDesignItem}">
        <Setter Property="Background" Value="#0C6495ED" />
        <Setter Property="SnapsToDevicePixels" Value="False" />
        <Setter Property="Width"
          Value="{Binding Width,Mode=TwoWay}" />
        <Setter Property="Height"
          Value="{Binding Height,Mode=TwoWay}" />
        <!--<Setter Property="BorderThickness" Value="{DynamicResource InputThickness}"/>-->
        <!--<Setter Property="Foreground" Value="{DynamicResource InputForeground}"/>-->
        <!--<Setter Property="BorderBrush" Value="{DynamicResource InputBorderBrush}"/>-->
        <Setter Property="InputMethod.IsInputMethodEnabled" Value="False"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:Project1UIDesignItem}">
                    <Grid x:Name="Container" Background="{TemplateBinding Background}">

                        <!--<Border 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Top" 
                            Margin="0,-30,0,0"
                            Height="30"
                            Width="100"
                            Background="#6495ED">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="{TemplateBinding ControlType}" Foreground="White"/>
                        </Border>-->
                        <Popup x:Name="popup" Placement="MousePoint" Width="259" MaxHeight="281" Height="auto" AllowsTransparency="True">
                            <Border BorderBrush="#ccc" BorderThickness="1" Background="White" Margin="5">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="5" Opacity="0.3"  ShadowDepth="0"/>
                                </Border.Effect>
                                <Grid Margin="10,5,10,10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="属性编辑面板" FontWeight="Bold" VerticalAlignment="Center"/>
                                    <ScrollViewer Grid.Row="1">
                                        <StackPanel>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>

                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>

                                                </Grid.RowDefinitions>
                                                <TextBlock Text="类型" VerticalAlignment="Center"/>
                                                <TextBlock 
                                                    Text="{TemplateBinding ItemTypeName}" 
                                                    Grid.Column="1"
                                                    HorizontalAlignment="Left" 
                                                    VerticalAlignment="Center"
                                                    />
                                                <!--尺寸宽高-->
                                                <TextBlock Text="宽" VerticalAlignment="Center"
                                                           Grid.Row="1" 
                                                            Margin="0,10,0,0"/>
                                                <controls:Project1UIInput  
                                                    Width="auto"
                                                    Height="25" 
                                                    Grid.Column="1"  
                                                    Grid.Row="1"
                                                    VerticalAlignment="Top"
                                                    Margin="0,10,0,0"
                                                    Text="{Binding Width,Mode=TwoWay}"
                                                    />
                                                <TextBlock Text="高" VerticalAlignment="Center"
                                                           Grid.Row="2" 
                                                            Margin="0,10,0,0"/>
                                                <controls:Project1UIInput  
                                                    Width="auto"
                                                    Height="25" 
                                                    Grid.Column="1"  
                                                    Grid.Row="2"
                                                    VerticalAlignment="Top"
                                                    Margin="0,10,0,0"
                                                    Text="{Binding Height,Mode=TwoWay}"
                                                    />
                                                <!--背景色-->
                                                <TextBlock 
                                                    Text="背景颜色"
                                                    Grid.Row="3" 
                                                    VerticalAlignment="Center"
                                                    Margin="0,10,0,0"
                                                    Visibility="{TemplateBinding ColorVisibility}"
                                                    />
                                                <controls:Project1UIColorSelect 
                                                    Width="20" 
                                                    Height="20" 
                                                    Grid.Column="1" 
                                                    HorizontalAlignment="Left" 
                                                    Grid.Row="3" 
                                                    VerticalAlignment="Center"
                                                    Margin="0,10,0,0"
                                                    Visibility="{TemplateBinding ColorVisibility}"
                                                    Color="{Binding Background,Mode=TwoWay}"
                                                    />
                                                <!--边框色-->
                                                <TextBlock Text="边宽颜色" 
                                                           Grid.Row="4" 
                                                           VerticalAlignment="Center" 
                                                           Margin="0,10,0,0"
                                                           Visibility="{TemplateBinding ColorVisibility}"/>
                                                <controls:Project1UIColorSelect 
                                                    Width="20" 
                                                    Height="20" 
                                                    Grid.Column="1" 
                                                    HorizontalAlignment="Left" 
                                                    Grid.Row="4"
                                                    VerticalAlignment="Center"
                                                    Margin="0,10,0,0"
                                                    Visibility="{TemplateBinding ColorVisibility}"
                                                    Color="{Binding BorderColor,Mode=TwoWay}"/>
                                                <!--文字-->
                                                <TextBlock 
                                                    Text="文字" 
                                                    Grid.Row="5" 
                                                    VerticalAlignment="Top" 
                                                    Margin="0,10,0,0"
                                                    Visibility="{TemplateBinding TextInputVisibility}"/>
                                                <controls:Project1UIInput  
                                                    Width="auto"
                                                    Height="40" 
                                                    Grid.Column="1"  
                                                    Grid.Row="5"
                                                    VerticalAlignment="Top"
                                                    AcceptsReturn="True"
                                                    TextWrapping="Wrap"
                                                    Margin="0,10,0,0"
                                                    Text="{Binding Text,Mode=TwoWay}"
                                                    Visibility="{TemplateBinding TextInputVisibility}"
                                                    />
                                                <!--透明度-->
                                                <TextBlock Text="透明度" Grid.Row="6" VerticalAlignment="Top" Margin="0,10,0,0"/>
                                                <controls:Project1UIInput  
                                                    Width="auto"
                                                    Height="25" 
                                                    Grid.Column="1"  
                                                    Grid.Row="6"
                                                    VerticalAlignment="Top"
                                                    Margin="0,10,0,0"
                                                    Text="{Binding Opacity,Mode=TwoWay}"
                                                    />
                                                <!--图片选择-->
                                                <TextBlock 
                                                    Text="图片" Grid.Row="7" 
                                                    VerticalAlignment="Top" 
                                                    Margin="0,10,0,0" 
                                                    Visibility="{TemplateBinding ImageInputVisibility}"/>
                                                <controls:Project1UIInput 
                                                    Type="FileSelect"
                                                    ExtNames="jpg图片|*.jpg|png透明图片|*.png"
                                                    x:Name="a123"
                                                    Width="auto"
                                                    Height="25" 
                                                    Grid.Column="1"  
                                                    Grid.Row="7"
                                                    VerticalAlignment="Top"
                                                    Margin="0,10,0,0"
                                                    Visibility="{TemplateBinding ImageInputVisibility}"
                                                    IsDisabledInput="True"
                                                    Placeholder="{Binding Image,Mode=TwoWay}"/>
                                                <!--按钮类型属性-->
                                                <TextBlock Text="按钮文本" Grid.Row="8" VerticalAlignment="Top" Margin="0,10,0,0"
                                                           Visibility="{TemplateBinding ButtonVisibility}"/>
                                                <controls:Project1UIInput  
                                                    Width="auto"
                                                    Height="25" 
                                                    Grid.Column="1"  
                                                    Grid.Row="8"
                                                    VerticalAlignment="Top"
                                                    Margin="0,10,0,0"
                                                    Visibility="{TemplateBinding ButtonVisibility}"
                                                    Text="{Binding ButtonText,Mode=TwoWay}"
                                                    />
                                                <!--文字大小-->
                                                <TextBlock Text="文本大小" Grid.Row="9" VerticalAlignment="Top" Margin="0,10,0,0"
                                                           Visibility="{TemplateBinding FontSizeVisibility}"/>
                                                <controls:Project1UIInput  
                                                    Width="auto"
                                                    Height="25" 
                                                    Grid.Column="1"  
                                                    Grid.Row="9"
                                                    VerticalAlignment="Top"
                                                    Margin="0,10,0,0"
                                                    Visibility="{TemplateBinding FontSizeVisibility}"
                                                    Text="{Binding FontSize,Mode=TwoWay}"
                                                    />
                                                <!--文字色-->
                                                <TextBlock Text="文本颜色" 
                                                           Grid.Row="10" 
                                                           VerticalAlignment="Center" 
                                                           Margin="0,10,0,0"
                                                           Visibility="{TemplateBinding TextColorVisibility}"/>
                                                <controls:Project1UIColorSelect 
                                                    Width="20" 
                                                    Height="20" 
                                                    Grid.Column="1" 
                                                    HorizontalAlignment="Left" 
                                                    Grid.Row="10"
                                                    VerticalAlignment="Center"
                                                    Margin="0,10,0,0"
                                                    Visibility="{TemplateBinding TextColorVisibility}"
                                                    Color="{Binding TextColor,Mode=TwoWay}"/>
                                                <!--文字加粗-->
                                                <TextBlock Text="文本加粗" 
                                                           Grid.Row="11" 
                                                           VerticalAlignment="Center" 
                                                           Margin="0,10,0,0"
                                                           Visibility="{TemplateBinding FontSizeVisibility}"/>
                                                <CheckBox
                                                    Width="20" 
                                                    Height="20" 
                                                    Grid.Column="1" 
                                                    HorizontalAlignment="Left" 
                                                    Grid.Row="11"
                                                    VerticalAlignment="Center"
                                                    Margin="0,10,0,0"
                                                    Visibility="{TemplateBinding FontSizeVisibility}"
                                                    IsChecked="{Binding IsFontBold,Mode=TwoWay}"/>
                                                <TextBlock Text="按钮样式" Grid.Row="12" VerticalAlignment="Top" Margin="0,10,0,0"
                                                           Visibility="{TemplateBinding ButtonVisibility}"/>
                                                <controls:Project1UIInput  
                                                    Width="auto"
                                                    Height="25" 
                                                    Grid.Column="1"  
                                                    Grid.Row="12"
                                                    VerticalAlignment="Top"
                                                    Margin="0,10,0,0"
                                                    Visibility="{TemplateBinding ButtonVisibility}"
                                                    Text="{Binding ButtonStyleName,Mode=TwoWay}"
                                                    />
                                            </Grid>


                                        </StackPanel>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Popup>
                        <Border
                        x:Name="Border"
                        BorderBrush="Transparent"
                        BorderThickness="1"
                        >
                            <ContentPresenter 
                            RecognizesAccessKey="True"
                                          SnapsToDevicePixels="False"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="Border" Property="BorderBrush" Value="#6495ED"/>
                        </MultiTrigger>


                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>


</ResourceDictionary>