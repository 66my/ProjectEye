<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Project1.UI.Controls"
                    xmlns:converter="clr-namespace:Project1.UI.Controls.Converters"
                    >



    <Style TargetType="{x:Type controls:Project1UIProcessBar}">

      
        <Setter Property="Background" Value="Transparent" />
        
        
        <Setter Property="Height"
          Value="5" />
        <Setter Property="Width"
          Value="100" />

        <Setter Property="SnapsToDevicePixels" Value="True" />


        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:Project1UIProcessBar}">
                    <Grid Background="{TemplateBinding Background}" ClipToBounds="True"
                          x:Name="Root">
                    </Grid>
                    
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>


</ResourceDictionary>