                        </MultiTrigger>


                        <Trigger Property="IsEnabled" Value="false">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource DisableBrush}"/>
                        </Trigger>
                        --><!--没有设置图标--><!--
