<ui:Project1UIWindow x:Class="ProjectEye.Views.StatisticWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectEye.Views"
        xmlns:ui="clr-namespace:Project1.UI.Controls;assembly=Project1.UI"
        mc:Ignorable="d"
        Title="数据统计" Height="450" Width="800"
                     WindowStartupLocation="CenterScreen" Icon="/ProjectEye;component/Resources/sunglasses.ico">
    <ui:Project1UIWindow.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource FontBrush}"/>
        </Style>
    </ui:Project1UIWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="auto"/>

        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="近7天用眼数据统计" HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="25,0,0,0"
                   FontSize="14"
                   FontWeight="Bold"/>
        <TabControl Margin="10" Grid.Row="1">
            <TabItem Header="用眼情况">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="9*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="小时"/>
                    <ui:Project1UIChart Grid.Row="1" Data="{Binding Mode=TwoWay,Path=Data.Working}"
                                    Labels="{Binding Mode=TwoWay,Path=Data.Labels}"
                                    Label="小时"/>
                </Grid>

            </TabItem>
            <TabItem Header="休息情况">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="9*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="分钟"/>
                    <ui:Project1UIChart Grid.Row="1" Data="{Binding Mode=TwoWay,Path=Data.Reset}"
                                    Labels="{Binding Mode=TwoWay,Path=Data.Labels}"
                                    Label="分钟"/>
                </Grid>
            </TabItem>
            <TabItem Header="跳过情况">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="9*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="次"/>
                    <ui:Project1UIChart Grid.Row="1" Data="{Binding Mode=TwoWay,Path=Data.Skip}"
                                    Labels="{Binding Mode=TwoWay,Path=Data.Labels}"
                                    Label="次"/>
                </Grid>
            </TabItem>
        </TabControl>
        <TextBlock Grid.Row="2" Text="*由于统计机制问题，数据精度会有上下小浮动的情况" VerticalAlignment="Center" Margin="10,0,10,10"/>
    </Grid>
</ui:Project1UIWindow>
